= form_for @profile do |f|
  - if @profile.errors.any?
    #error_explanation
      %h2= "#{pluralize(@profile.errors.count, "error")} prohibited this profile from being saved:"
      %ul
        - @profile.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :avatar
    = f.file_field :avatar
  .field
    = f.label :first_name
    = f.text_field :first_name
  .field
    = f.label :last_name
    = f.text_field :last_name
  .field
    = f.label :gender
    = f.text_field :gender
  .field
    = f.label :website
    = f.text_field :website
  .field
    = f.label :locale
    = f.text_field :locale
  .field
    = f.label :bio
    = f.text_area :bio
  .field
    = f.label :user
    = f.text_field :user
  .actions
    = f.submit 'Save'
