.container
  - model_class = Place
  .page-header
    %h1=t '.title', :default => model_class.model_name.human.pluralize.titleize
  %table.table.table-striped
    %thead
      %tr
        %th= model_class.human_attribute_name(:id)
        %th= model_class.human_attribute_name(:street)
        %th= model_class.human_attribute_name(:city)
        %th= model_class.human_attribute_name(:state)
        %th= model_class.human_attribute_name(:country)
        %th= model_class.human_attribute_name(:zip)
        %th= model_class.human_attribute_name(:latitude)
        %th= model_class.human_attribute_name(:longitude)
        %th= model_class.human_attribute_name(:name)
        %th= model_class.human_attribute_name(:event_id)
        %th= model_class.human_attribute_name(:created_at)
        %th=t '.actions', :default => t("helpers.actions")
    %tbody
      - @places.each do |place|
        %tr
          %td= link_to place.id, place_path(place)
          %td= place.street
          %td= place.city
          %td= place.state
          %td= place.country
          %td= place.zip
          %td= place.latitude
          %td= place.longitude
          %td= place.name
          %td= place.event_id
          %td=l place.created_at
          %td
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_place_path(place), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), place_path(place), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

  = link_to t('.new', :default => t("helpers.links.new")), new_place_path, :class => 'btn btn-primary'
