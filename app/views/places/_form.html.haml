= simple_form_for @place, :html => { :class => 'form-horizontal' } do |f|
  = f.input :street
  = f.input :city
  = f.input :state
  = f.input :country
  = f.input :zip
  = f.input :latitude
  = f.input :longitude
  = f.input :name
  = f.input :event_id
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), places_path, :class => 'btn'
